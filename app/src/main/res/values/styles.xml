<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toolbar_style" parent="AppTheme">
        <item name="android:homeAsUpIndicator">@drawable/ic_left_arrow</item>
        <item name="homeAsUpIndicator">@drawable/ic_left_arrow</item>
        <!--<item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>-->
    </style>

    <style name="SpinnerTheme" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>
</resources>
